generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Providers {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  firstName   String
  lastName    String
  credentials String[]
  specialty   String
  locations   Location[]
  phone       String
  fax         String
  imageUrl    String?
}

model Clinics {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  name          String @unique
  streetAddress String
  city          String
  zip           String
  phone         String
  fax           String
}

type Location {
  id   String
  city String
}
